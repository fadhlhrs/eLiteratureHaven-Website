@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Admin Homepage</title>
    <style>
        body {
            font-family: 'Times new roman', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f0f0f0;
        }

        header {
            background-color: #127;
            color: white;
            padding: 1em;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        nav {
            display: flex;
        }

            nav a {
                color: white;
                text-decoration: none;
                margin: 0 10px;
            }

        .content {
            display: flex;
            padding: 20px;
        }

        .sidebar {
            width: 20%;
            background-color: #A9A9A9;
            padding: 20px;
            color: white;
        }

        .main-content {
            width: 80%;
            padding: 20px;
            background-color: #fff;
        }

        .list-buttons {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

            .list-buttons button {
                width: 100%;
                color: 0000;
                padding: 10px;
                border: none;
                cursor: pointer;
            }

                .list-buttons button.active {
                    background-color: #696969; /* Warna gelap untuk tombol aktif */
                }

        .book-list {
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        .book {
            display: flex;
            justify-content: space-between;
            align-items: center;
            border: 1px solid #ddd;
            padding: 10px;
        }

            .book img {
                width: 50px;
                height: 50px;
                object-fit: cover;
                margin-right: 20px;
            }

        .book-info {
            flex: 1;
        }

        .book-buttons {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        .add-book-btn {
            width: 50%;
            margin: 0 auto;
            background-color: #4CAF50;
            color: white;
            padding: 10px;
            border: none;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <header>
        <h1>eLiteratureHaven <br> Admin Homepage</h1>
        <nav>
            <a href="#">Home</a> | <a href="#">User page</a>
        </nav>
    </header>
    <div class="content">
        <div class="sidebar">
            <div class="list-buttons">
                <button class="active">Book List</button>
                <button>Category List</button>
                <button>User List</button>
            </div>
        </div>
        <div class="main-content">
            <input type="search" id="search" placeholder="Search Here..." />
            <div class="book-list">
                <div class="book">
                    <img src="book1.jpg" alt="Book Cover">
                    <div class="book-info">
                        <div>Book ID: 001</div>
                        <div>Title: Book Title 1</div>
                        <div>Author: Author 1</div>
                        <div>Publisher: Publisher 1</div>
                        <div>Publish Year: 2021</div>
                        <div>Category: Category 1</div>
                        <div>Genre: Genre 1</div>
                        <div>Rental Price: $11</div>
                    </div>
                    <div class="book-buttons">
                        <button>Edit</button>
                        <button>Delete</button>
                    </div>
                </div>
                <div class="book">
                    <img src="book2.jpg" alt="Book Cover">
                    <div class="book-info">
                        <div>Book ID: 002</div>
                        <div>Title: Book Title 2</div>
                        <div>Author: Author 2</div>
                        <div>Publisher: Publisher 2</div>
                        <div>Publish Year: 2022</div>
                        <div>Category: Category 2</div>
                        <div>Genre: Genre 2</div>
                        <div>Rental Price: $22</div>
                    </div>
                    <div class="book-buttons">
                        <button>Edit</button>
                        <button>Delete</button>
                    </div>
                </div>
                <div class="book">
                    <img src="book2.jpg" alt="Book Cover">
                    <div class="book-info">
                        <div>Book ID: 003</div>
                        <div>Title: Book Title 3</div>
                        <div>Author: Author 3</div>
                        <div>Publisher: Publisher 3</div>
                        <div>Publish Year: 2023</div>
                        <div>Category: Category 3</div>
                        <div>Genre: Genre 3</div>
                        <div>Rental Price: $33</div>
                    </div>
                    <div class="book-buttons">
                        <button>Edit</button>
                        <button>Delete</button>
                    </div>
                </div>
            </div>
            <button class="add-book-btn">+ Add Book</button>
        </div>
    </div>
</body>
</html>
