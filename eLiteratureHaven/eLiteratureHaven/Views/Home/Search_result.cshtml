@model IEnumerable<eLiteratureHaven.Models.books>

<!DOCTYPE html>

@if (Model != null && Model.Any())
{
    <table class="table">
        <tr>
            <th>
                Book Cover
            </th>
            <th>
                Book Title
            </th>
            <th>
                Author
            </th>
            <th>
                Published Year
            </th>
            @foreach (var filteredBooks in Model)
            {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(filteredBooks.image_path))
                    {
                        <img src="@Url.Content("~/Content/Cover_images/" + filteredBooks.image_path)" style="max-height:200px;" />
                    }
                    else
                    {
                        <span>No Image</span>
                    }
                </td>
                <td>
                    @filteredBooks.title
                </td>
                <td>
                    @filteredBooks.author
                </td>
                <td>
                    @filteredBooks.publication_year
                </td>
            </tr>
        }
        </table>
    }
    else
    {
        <h1>Book not found</h1>
    }
